pipeline{
   agent any
   parameters {
        choice(name: 'ENVIRONMENT', choices: ['DEV', 'STABLE', 'PREPROD', 'PROD'],
                description: 'Pick an environment to deploy the DB changes')
    }
   stages {
       stage('build'){
           steps {
               sh 'ls'
               sh "pwd"
                sh 'python3 hello.py'
            }
       }
   }
}